<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/foundation.min.css" rel="stylesheet" />

    <!-- Important Owl stylesheet -->
    <link href="~/Content/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/owl.theme.css" rel="stylesheet" />
    <link href="~/Content/owl.transitions.css" rel="stylesheet" />
    
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>
<body>

    <!--Zurb Foundation 6 Top bar: http://foundation.zurb.com/sites/docs/top-bar.html-->

        <div class="top-bar">
            <div class="top-bar-left">
                <ul class="dropdown menu" data-dropdown-menu>
                    <li class="menu-text">@ViewBag.Title</li>
                </ul>
            </div>
            <div class="top-bar-right">
                <ul class="menu">
                    <li><button type="button" class="button"><i class="fa fa-upload"></i> <span class="hidden-xs">Load MD File</span></button></li>
                </ul>
            </div>
</div>


    @RenderBody()


    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/what-input.min.js"></script>
    <script src="~/Scripts/foundation.min.js"></script>
    <script type="text/javascript">
        $(document).foundation();
    </script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
